import type { Meta, StoryObj } from '@storybook/react';
import { userEvent, within, expect } from '@storybook/test';
import { useTemplatesCache } from './useTemplatesCache';
import { useState, useEffect } from 'react';

// Composant de test pour useTemplatesCache
const TemplatesCacheDemo = () => {
  const {
    fetchTemplates,
    searchTemplates,
    getCachedData,
    setCachedData,
    clearCache,
    getCacheSize,
    getCacheInfo,
    isLoading,
    error,
    CACHE_DURATION
  } = useTemplatesCache();

  const [templates, setTemplates] = useState<any[]>([]);
  const [searchResults, setSearchResults] = useState<any[]>([]);
  const [cacheInfo, setCacheInfo] = useState<any[]>([]);
  const [manualData, setManualData] = useState<any>(null);

  const handleFetchTemplates = async () => {
    const data = await fetchTemplates(10);
    setTemplates(data);
  };

  const handleSearch = async (query: string) => {
    const results = await searchTemplates(query);
    setSearchResults(results);
  };

  const handleGetCacheInfo = () => {
    const info = getCacheInfo();
    setCacheInfo(info);
  };

  const handleSetManualData = () => {
    const mockData = [
      { _id: 'manual_1', title: 'Template manuel 1', category: 'Test' },
      { _id: 'manual_2', title: 'Template manuel 2', category: 'Test' }
    ];
    setCachedData('manual_test', mockData);
    setManualData(mockData);
  };

  const handleGetManualData = () => {
    const data = getCachedData('manual_test');
    setManualData(data);
  };

  return (
    <div className="min-h-screen bg-gray-50 p-8">
      <div className="max-w-4xl mx-auto">
        <h1 className="text-3xl font-bold mb-8 text-center">Demo useTemplatesCache</h1>
        
        {/* États globaux */}
        <div className="mb-8 p-6 bg-white rounded-lg shadow">
          <h2 className="text-xl font-semibold mb-4">États du Cache</h2>
          <div className="grid grid-cols-2 gap-4 text-sm">
            <div>
              <span className="font-medium">Loading:</span> 
              <span className={`ml-2 ${isLoading ? 'text-orange-600' : 'text-green-600'}`}>
                {isLoading ? 'OUI' : 'NON'}
              </span>
            </div>
            <div>
              <span className="font-medium">Erreur:</span> 
              <span className="ml-2 text-red-600">
                {error || 'Aucune'}
              </span>
            </div>
            <div>
              <span className="font-medium">Taille du cache:</span> 
              <span className="ml-2">{getCacheSize()} entrées</span>
            </div>
            <div>
              <span className="font-medium">Durée cache:</span> 
              <span className="ml-2">{CACHE_DURATION / 1000}s</span>
            </div>
          </div>
        </div>

        <div className="grid grid-cols-1 lg:grid-cols-2 gap-8">
          {/* Section Fetch Templates */}
          <div className="space-y-4">
            <div className="p-6 bg-white rounded-lg shadow">
              <h3 className="text-lg font-semibold mb-4">1. Récupérer Templates</h3>
              <div className="space-y-3">
                <button
                  onClick={handleFetchTemplates}
                  disabled={isLoading}
                  className="w-full px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600 disabled:opacity-50"
                >
                  {isLoading ? 'Chargement...' : 'Fetcher Templates'}
                </button>
                
                <div className="text-sm">
                  <p className="font-medium">Templates récupérés ({templates.length}):</p>
                  <ul className="mt-2 space-y-1 max-h-40 overflow-y-auto">
                    {templates.map((template) => (
                      <li key={template._id} className="text-gray-600">
                        • {template.title} {template.category && `(${template.category})`}
                      </li>
                    ))}
                  </ul>
                </div>
              </div>
            </div>

            {/* Section Recherche */}
            <div className="p-6 bg-white rounded-lg shadow">
              <h3 className="text-lg font-semibold mb-4">2. Recherche</h3>
              <div className="space-y-3">
                <div className="flex gap-2">
                  <input
                    type="text"
                    placeholder="Rechercher..."
                    className="flex-1 px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500"
                    onKeyPress={(e) => {
                      if (e.key === 'Enter') {
                        handleSearch((e.target as HTMLInputElement).value);
                      }
                    }}
                  />
                  <button
                    onClick={() => {
                      const input = document.querySelector('input[placeholder="Rechercher..."]') as HTMLInputElement;
                      handleSearch(input.value);
                    }}
                    className="px-4 py-2 bg-green-500 text-white rounded hover:bg-green-600"
                  >
                    OK
                  </button>
                </div>
                
                <div className="text-sm">
                  <p className="font-medium">Résultats ({searchResults.length}):</p>
                  <ul className="mt-2 space-y-1 max-h-40 overflow-y-auto">
                    {searchResults.map((result) => (
                      <li key={result._id} className="text-gray-600">
                        • {result.title}
                      </li>
                    ))}
                  </ul>
                </div>
              </div>
            </div>
          </div>

          {/* Section Cache Management */}
          <div className="space-y-4">
            <div className="p-6 bg-white rounded-lg shadow">
              <h3 className="text-lg font-semibold mb-4">3. Gestion du Cache</h3>
              <div className="space-y-3">
                <div className="grid grid-cols-2 gap-2">
                  <button
                    onClick={handleSetManualData}
                    className="px-3 py-2 bg-purple-500 text-white rounded text-sm hover:bg-purple-600"
                  >
                    Ajouter données manuelles
                  </button>
                  <button
                    onClick={handleGetManualData}
                    className="px-3 py-2 bg-gray-500 text-white rounded text-sm hover:bg-gray-600"
                  >
                    Récupérer manuelles
                  </button>
                  <button
                    onClick={clearCache}
                    className="px-3 py-2 bg-red-500 text-white rounded text-sm hover:bg-red-600"
                  >
                    Vider cache
                  </button>
                  <button
                    onClick={handleGetCacheInfo}
                    className="px-3 py-2 bg-blue-500 text-white rounded text-sm hover:bg-blue-600"
                  >
                    Info cache
                  </button>
                </div>
                
                {manualData && (
                  <div className="text-sm">
                    <p className="font-medium">Données manuelles:</p>
                    <pre className="mt-2 p-2 bg-gray-100 rounded text-xs overflow-auto">
                      {JSON.stringify(manualData, null, 2)}
                    </pre>
                  </div>
                )}
              </div>
            </div>

            {/* Section Cache Info */}
            <div className="p-6 bg-white rounded-lg shadow">
              <h3 className="text-lg font-semibold mb-4">4. Informations Cache</h3>
              <div className="space-y-2">
                <button
                  onClick={handleGetCacheInfo}
                  className="w-full px-4 py-2 bg-orange-500 text-white rounded hover:bg-orange-600"
                >
                  Mettre à jour les infos
                </button>
                
                <div className="text-sm max-h-60 overflow-y-auto">
                  {cacheInfo.length === 0 ? (
                    <p className="text-gray-500">Cliquez sur "Mettre à jour" pour voir les infos</p>
                  ) : (
                    <div className="space-y-2">
                      {cacheInfo.map((info, index) => (
                        <div key={index} className="p-2 bg-gray-50 rounded text-xs">
                          <p><span className="font-medium">Clé:</span> {info.key}</p>
                          <p><span className="font-medium">Âge:</span> {Math.floor(info.age / 1000)}s</p>
                          <p><span className="font-medium">Expiré:</span> 
                            <span className={info.isExpired ? 'text-red-600' : 'text-green-600'}>
                              {info.isExpired ? ' OUI' : ' NON'}
                            </span>
                          </p>
                        </div>
                      ))}
                    </div>
                  )}
                </div>
              </div>
            </div>
          </div>
        </div>

        {/* Instructions */}
        <div className="mt-8 p-6 bg-blue-50 rounded-lg">
          <h3 className="text-lg font-semibold mb-3 text-blue-800">Instructions de Test</h3>
          <ol className="space-y-2 text-sm text-blue-700 list-decimal list-inside">
            <li>Cliquez sur "Fetcher Templates" pour voir le cache en action</li>
            <li>Cliquez à nouveau pour voir les données缓存ées</li>
            <li>Testez la recherche avec différents mots-clés</li>
            <li>Ajoutez des données manuelles et récupérez-les</li>
            <li>Visualisez les informations du cache et son statut d'expiration</li>
            <li>Videz le cache et observez les changements</li>
          </ol>
        </div>
      </div>
    </div>
  );
};

const meta: Meta<typeof TemplatesCacheDemo> = {
  title: 'Hooks/useTemplatesCache',
  component: TemplatesCacheDemo,
  parameters: {
    layout: 'fullscreen',
    docs: {
      description: {
        component: `
Le hook useTemplatesCache gère le cache des templates pour optimiser les performances.

Fonctionnalités :
- Cache automatique des templates avec expiration
- Recherche avec cache intelligent
- Gestion des erreurs avec fallback
- Contrôle manuel du cache
- Statistiques et informations du cache
- Optimisation des performances réseau
        `,
      },
    },
  },
  tags: ['autodocs'],
};

export default meta;
type Story = StoryObj<typeof meta>;

// Story: Démonstration principale
export const DefaultDemo: Story = {
  name: 'Démonstration complète',
  parameters: {
    docs: {
      description: {
        story: 'Démonstration complète de toutes les fonctionnalités du cache',
      },
    },
    chromatic: {
      delay: 1000,
    },
  },
};